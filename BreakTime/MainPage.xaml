<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakTime.MainPage" x:Name="frmMain">

    <StackLayout Padding="20,20">
       <Label x:Name="lblDisplay"
              Text="Take A Break!" 
              FontSize="Title"
              Padding="0,40,0,80"
              HorizontalOptions="Center"/>
       
       <Button CommandParameter="2" Text="5 Min Break" Clicked="Start_OnClicked"/>
       <Button  CommandParameter="10" Text="10 Min Break" Margin="0,10" Clicked="Start_OnClicked"/>
       <Button  CommandParameter="15" Text="15 Min Break" Clicked="Start_OnClicked" />
       <Button x:Name="Reset" Text="Reset" Clicked="Reset_OnClicked" Margin="0, 20"/>
       
    </StackLayout>

</ContentPage>
